@page
@model Ramsoft.Pages.Task.AddTaskModel
@{
}
<form method="post" class="mt-3">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Task.TaskName" class="control-label"></label>
                <input asp-for="Task.TaskName" class="form-control" />
                <span asp-validation-for="Task.TaskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Description" class="control-label"></label>
                <input asp-for="Task.Description" class="form-control" />
                <span asp-validation-for="Task.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Deadline" class="control-label"></label>
                <input asp-for="Task.Deadline" class="form-control" />
                <span asp-validation-for="Task.Deadline" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Task.State" class="col-sm-2 col-form-label">
                </label>
                <div class="col-sm-10">
                    <select asp-for="Task.State" class="custom-select mr-sm-2"
                            asp-items="Html.GetEnumSelectList<TaskState>()">
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">AddTask</button>
                    <a asp-page="/Task/Index" class="btn btn-primary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</form>

