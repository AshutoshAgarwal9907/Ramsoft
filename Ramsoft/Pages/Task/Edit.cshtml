@page
@model Ramsoft.Pages.Task.EditModel
@{
    var pageHeader = Model.Task.TaskId > 0 ? "Edit Task" : "Add Task";
}
<h1> @pageHeader </h1>

    <form method="post" class="mt-3">
        <input hidden asp-for="Task.TaskId" />

        <div class="form-group row">
            <label asp-for="Task.TaskName" class="col-sm-2 col-form-label">
            </label>
            <div class="col-sm-10">
                <input asp-for="Task.TaskName" class="form-control" placeholder="TaskName">
                <span asp-validation-for="Task.TaskName" class="text-danger"></span>
                </input>
            </div>
        </div>
    <div class="form-group row">
        <label asp-for="Task.Description" class="col-sm-2 col-form-label">
        </label>
        <div class="col-sm-10">
            <input asp-for="Task.Description" class="form-control" placeholder="Description">
            </input>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Task.Deadline" class="col-sm-2 col-form-label">
        </label>
        <div class="col-sm-10">
            <input asp-for="Task.Deadline" class="form-control" placeholder="Description">
            </input>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Task.State" class="col-sm-2 col-form-label">
        </label>
        <div class="col-sm-10">
            <select asp-for="Task.State" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<TaskState>()">
            </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
           <button type="submit" class="btn btn-primary">Save</button>
           <a asp-page="/Task/Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>

    </form>